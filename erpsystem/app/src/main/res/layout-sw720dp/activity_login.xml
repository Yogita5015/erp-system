<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Login"
        android:textSize="40dp"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/linear_in1"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <EditText
            android:id="@+id/email"
            android:hint="Your Email"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:textSize="35dp"
            android:drawableLeft="@drawable/email64"
            android:drawablePadding="10dp"
            android:background="@drawable/edittext_bg_rounded_corners"/>


        <EditText
            android:id="@+id/password"
            android:hint="Your Password"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="30dp"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/key48"
            android:drawablePadding="10dp"
            android:background="@drawable/edittext_bg_rounded_corners"
            />
    </LinearLayout>


    <LinearLayout

        android:id="@+id/linear_in3"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        tools:ignore="NotSibling"

        >

        <CheckBox
            android:id="@+id/remberme"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:checked="false"
            android:text="Rember Me"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/forgetpass"
            android:text="Forget Password?"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="right"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            />

    </LinearLayout>
    <Button
        android:id="@+id/login"
        android:text="Login"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        android:textColor="#4DD0E1"
        android:drawableLeft="@drawable/login48"
        android:background="@drawable/button_bg_rounded_cornersblue"
        />
    <TextView
        android:id="@+id/newtouser"
        android:text="New to User"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        />
    <Button
        android:id="@+id/regi"
        android:text="Register"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="#dd0000"
        android:drawableLeft="@drawable/regi48"
        android:background="@drawable/button_bg_rounded_corners"
        />
    <TextView
        android:id="@+id/customerpanel"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customer Panel"
        android:layout_marginTop="20dp"
        android:gravity="right"
        />
</LinearLayout>