<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@+id/collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
    </android.support.design.widget.CollapsingToolbarLayout>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:id="@+id/linearLayout_1"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/SupplierId"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1764"
                    android:layout_marginLeft="100dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>


                <TextView
                    android:id="@+id/supplierName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Supplier"
                    android:layout_marginLeft="100dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>

                <TextView
                    android:id="@+id/supplierEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="supplier@gmail.com"
                    android:layout_marginLeft="100dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>

                <TextView
                    android:id="@+id/supplierContact"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="9511918333"
                    android:layout_marginLeft="100dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>


                <TextView
                    android:id="@+id/supplierAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Pune"
                    android:layout_marginLeft="100dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>
                <TextView
                    android:id="@+id/supplierGSTNo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="12546"
                    android:layout_marginLeft="100dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>
                <TextView
                    android:id="@+id/supplierPANNo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="12546366666"
                    android:layout_marginLeft="100dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout_2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            >

            <Button
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Delete"
                android:textSize="20dp" />


        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>


