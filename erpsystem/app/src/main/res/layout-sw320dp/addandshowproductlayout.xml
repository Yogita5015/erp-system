<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@+id/collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
    </android.support.design.widget.CollapsingToolbarLayout>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/StaticProductId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PID-"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView

                android:id="@+id/ProductId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/StaticProductId"
                android:text="64"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/StaticProduct_Name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/StaticProductId"
                android:text="PN-"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/Product_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ProductId"
                android:layout_toRightOf="@id/StaticProduct_Name"
                android:text="Demo"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/Product_Unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/StaticProduct_Name"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="262dp"
                android:layout_marginRight="262dp"
                android:text="(KG)" />


            <TextView
                android:id="@+id/StaticCategory_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Product_Name"
                android:text="CN-"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/Category_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Product_Unit"

                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="36dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="2dp"
                android:text="Demo123"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/StaticProduct_MRP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/StaticCategory_Name"
                android:text="PMRP-"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/Product_MRP"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Category_Name"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="72dp"
                android:layout_marginLeft="72dp"
                android:layout_marginTop="-1dp"
                android:layout_toRightOf="@+id/StaticProduct_MRP"
                android:text="565"
                android:textAppearance="?android:attr/textAppearanceLarge" />


            <TextView
                android:id="@+id/StaticProduct_Purchase_Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Product_MRP"
                android:text="PP-"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/Product_Purchase_Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="119dp"
                android:layout_toRightOf="@+id/StaticProduct_Purchase_Price"
                android:text="4657"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/StaticProduct_Sales_Price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/StaticProduct_Purchase_Price"
                android:text="SP-"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/Product_Sales_Price"
                android:layout_width="278dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Product_Purchase_Price"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="0dp"
                android:layout_toRightOf="@+id/StaticProduct_Sales_Price"
                android:text="3434"
                android:textAppearance="?android:attr/textAppearanceLarge" />


            <TextView
                android:id="@+id/StaticProduct_Tax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Product_Sales_Price"
                android:text="PT-"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/Product_Tax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Product_Sales_Price"

                android:layout_marginLeft="3dp"
                android:layout_marginTop="-1dp"
                android:layout_toRightOf="@+id/StaticProduct_Tax"
                android:text="5%"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/StaticProduct_Discount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="PD-"
                android:layout_below="@+id/Product_Tax"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/Product_Discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="38dp"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="204dp"
                android:text="5%"
                android:textAppearance="?android:attr/textAppearanceLarge" />


            <TextView
                android:id="@+id/StaticProduct_Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/StaticProduct_Tax"
                android:layout_marginTop="23dp"
                android:text="PNo-"
                android:textAppearance="?android:attr/textAppearanceLarge" />-->

            <TextView
                android:id="@+id/Product_Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/StaticProduct_Number"
                android:layout_toRightOf="@+id/StaticProduct_Number"
                android:text="2"
                android:textAppearance="?android:attr/textAppearanceLarge" />-->

            <!--<LinearLayout
            android:id="@+id/linearLayout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/edit"
                android:layout_width="wrap_content"
